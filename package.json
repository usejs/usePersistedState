  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "keywords": [
    "usePersistedState",
    "usepersistedstate",
    "use-persisted-state",
    "custom-hooks",
    "react-custom-hooks",
    "react-hooks"
